{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Église Gestion",
  "version": "0.1.0",
  "identifier": "mg.eglise.gestion",
  "build": {
    "beforeDevCommand": "trunk serve --port 8080 --open false",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "trunk build --release",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Église Gestion — Madagascar",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
